        android:theme="@style/AppTheme">
        <activity android:name=".BloodRequirementListActivity" />
        <activity android:name=".home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BloodRequirementActivity" />
        <activity android:name=".RecentBloodcampActivity" />
        <activity android:name=".BloodCampActivity" />
        <activity android:name=".HospitalListActivity" />
        <activity android:name=".HospitalPage" />
